<% if user_signed_in? %>
  <p>Welcome, <strong><%= current_user.email %><br><%= current_user.role %></strong></p>
  <%= button_to 'Logout', destroy_user_session_path,method: :delete, class: "logout-btn" %>
<% else %>
  <%= link_to 'Signup', new_user_registration_path, class: "signup-btn" %>
  <%= link_to 'Login', new_user_session_path , class: "login-btn" %>
<% end %> 